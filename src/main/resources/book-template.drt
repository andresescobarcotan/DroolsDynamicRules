template header
name
price

package com.andresescobar.DroolsDynamicRules;

import com.andresescobar.DroolsDynamicRules.Book;

template "books"

rule "Set the Price from Book Name @{row.rowNumber}"
when
	book : Book(name == "@{name}", price != @{price})
then
	modify (book) {
		setPrice(@{price})
	}
end

end template
